{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": { "@infrastructure/*": ["./infrastructure/*"] }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "mql5"]
}
